.content {
    display: flex;
    flex-direction: column;
    width: 100%;
}

.content .notification {
    flex: 1;
    width: 100%;
    background-color: aqua;
}

.content .course {
    flex: 1;
    display: flex;
    flex-direction: column;
    background-color: beige;
    width: 100%;
}

.course view {
    padding: 4rpx 58rpx;
}

/* title for course */
.content .course .title {
    flex: 1;
    margin:0rpx 12rpx;
}

/* tabs for showing course categories*/
.content .course .tabs {
    flex: 1;
    display: flex;
    flex-direction: row;
    width: 100%;
}

/* description for each course */
.content .course .description {
    flex: 2;
}

/* categories menu layout */
.content .course .tabs .item {
    flex: 1;
    font-size: 28rpx;
    color: #ccc;
    background-color: azure;
    padding: 24rpx;
}

.content .course .tabs .item.active {
    color: black;
}

.content .course .tabs .item.active text {
    color: black;
    border-bottom: 5rpx solid yellowgreen;
}

.content .great-moment {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 4rpx 58rpx;
    background-color: bisque;
    width: 100%;
}

.content .attention {
    flex: 1;
    padding: 4rpx 58rpx;
    background-color: blue;
    width: 100%;
}